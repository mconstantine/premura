{
  "name": "premura",
  "description": "A progress management tool.",
  "version": "0.1.0",
  "author": {
    "name": "Mauro Constantinescu",
    "email": "mconst@mconst.it"
  },
  "license": "GNU GPLv3",
  "repository": {
    "type": "git",
    "url": "https://github.com/mconstantine/premura.git"
  },
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "node-sass": "^4.11.0",
    "react-router-dom": "^4.3.1"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "prepack": "react-scripts build",
    "pack": "build -c.extraMetadata.main=build/main.js",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^3.0.6",
    "electron-builder": "^20.28.4",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.0.5",
    "wait-on": "^3.1.0"
  },
  "main": "public/main.js",
  "build": {
    "appId": "it.mconst.premura",
    "productName": "Premura",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "homepage": "./"
}
